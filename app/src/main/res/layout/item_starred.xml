<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="-10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/login_icon" />

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:fontFamily="sans-serif-black"
            android:maxLines="1"
            android:text="AndrewTseZhou/KFGit"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_full_name"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:text="开源GitHub客户端"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:text="updated at 2019.2.20" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_updated_at"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:text="JavaScript" />

        <ImageView
            android:id="@+id/iv_star_state"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_below="@id/tv_updated_at"
            android:layout_toEndOf="@id/tv_language"
            android:layout_marginStart="15dp"
            android:src="@drawable/starred_state" />

        <TextView
            android:id="@+id/tv_starred_count"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_updated_at"
            android:layout_toEndOf="@id/iv_star_state"
            android:text="30000" />

        <ImageView
            android:id="@+id/iv_fork_state"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_below="@id/tv_updated_at"
            android:layout_toEndOf="@id/tv_starred_count"
            android:layout_marginStart="15dp"
            android:src="@drawable/fork_state" />

        <TextView
            android:id="@+id/tv_forks_count"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_updated_at"
            android:layout_toEndOf="@id/iv_fork_state"
            android:text="30000" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>